" Only execute safe per-project vimrc commands
set secure

if version >= 703
  " Persistent undo
  set undofile
  set undodir=~/.vim/tmp/undo

  " Column markers
  set colorcolumn=80,120
  hi ColorColumn guibg=#1F1F1F
endif

