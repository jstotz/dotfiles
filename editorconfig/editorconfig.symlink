# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# all files
[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.xml]
indent_style = tab
indent_size = 4

[*.py]
indent_size = 4

[*.java]
indent_style = tab
indent_size = 4

[*.go]
indent_style = tab
indent_size = 4

[Makefile]
indent_style = tab

[*.{md,mkdn}]
trim_trailing_whitespace = false
max_line_length = 80
